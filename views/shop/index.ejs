<%- include('../includes/head.ejs') %>
</head>

<body>
	<%- include('../includes/nav.ejs') %>

	<main>
		<div class="container">
			<div class="row">
				<div class="col-xs-12">

					<% if(products.length > 0 ) { %>
					<h1>My Products</h1>
					<% for(let product of products) { %>
					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src="\<%= product.imageURL %>" alt="Card image cap">
						<div class="card-body">
							<h5 class="card-title text-center">
								<%= product.title %>
							</h5>
							<h5 class="text-center">$
								<%= product.price %>
							</h5>
							<p class="card-text">
								<%= product.description %>
							</p>
							<% if (isAuthenticated) { %>
							<%- include('../includes/addToCart.ejs', {product: product}) %>
							<% } %>

						</div>
					</div>





					<% } %>
					<div class="col-xs-12">
						<% if (currentPage !=1 && previousPage != 1) { %><a href="/?page=1">1</a>
						<% } %>

						<% if (hasPreviousPage) { %><a href="/?page=<%= previousPage %>">
							<%= previousPage %></a>
						<% } %>

						<a href="/?page=<%= currentPage %>" class="active">
							<%= currentPage %></a>

						<% if (hasNextPage) { %>
						<a href="/?page=<%= nextPage %>">
							<%= nextPage %></a>
						<% } %>

						<% if (lastPage != currentPage && nextPage != lastPage) { %><a href="/?page=<%= lastPage %>">
							<%= lastPage %></a>
						<% } %>

					</div>
					<% } else { %>
					<h1>No products found</h1>
					<% } %>
				</div>

			</div>
		</div>

	</main>
	<%- include('../includes/end.ejs') %>